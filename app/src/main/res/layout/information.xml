<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/appBarLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="REGISTER YOUR BLOOD GROUP"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"/>

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="9"
        android:layout_below="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:id="@+id/address"
        android:hint="address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="9"
        android:id="@+id/phone"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address"
        android:hint="@android:string/emptyPhoneNumber" />

    <TextView
        android:text="GENDER"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/address"
        android:layout_alignStart="@+id/NAME"
        android:id="@+id/GENDER"
        tools:text="GENDER" />

    <TextView
        android:text="ADDRESS"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone"
        android:layout_alignStart="@+id/GENDER"
        android:id="@+id/ADDRESS"
        tools:text="ADDRESS" />

    <TextView
        android:text="PHONE"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PHONE"
        tools:text="PHONE"
        android:layout_alignBottom="@+id/phone"
        android:layout_alignStart="@+id/ADDRESS" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="9"
        android:id="@+id/blood"
        android:layout_alignBottom="@+id/BLOOD"
        android:layout_alignStart="@+id/phone"
        android:hint="blood group" />

    <TextView
        android:text="GROUP"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BLOOD"
        tools:text="GROUP"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/PHONE" />

    <CheckBox
        android:text="I accept terms and conditions"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BLOOD"
        android:layout_alignStart="@+id/BLOOD"
        android:layout_marginTop="57dp"
        android:buttonTint="@color/r1"
        android:id="@+id/terms"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="9"
        android:id="@+id/gender"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:hint="gender" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/register"
        android:layout_below="@+id/terms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"></Button>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:ems="9"
        android:layout_marginEnd="16dp"
        android:id="@+id/name"
        android:layout_below="@+id/appBarLayout"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@android:drawable/screen_background_dark"
        android:textColorLink="?attr/actionMenuTextColor"
        android:singleLine="false"
        android:hint="name" />

    <TextView
        android:text="NAME"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:id="@+id/NAME"
        tools:text="NAME"
        android:layout_above="@+id/gender"
        android:layout_alignParentStart="true" />


</RelativeLayout>






